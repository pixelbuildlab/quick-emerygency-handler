<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="8dp"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerAsDriverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as Driver"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="6dp"
        android:drawableLeft="@drawable/driver"
        android:drawablePadding="3dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_gradient" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerAsPatientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as User"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="6dp"
        android:drawableLeft="@drawable/patient"
        android:drawablePadding="3dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_gradient" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/dark_red"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp" />

</LinearLayout>