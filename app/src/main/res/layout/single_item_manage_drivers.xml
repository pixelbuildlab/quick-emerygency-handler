<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/parentLayoutD"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewManageDriversSingleItem"
        android:src="@drawable/ic_baseline_person_24"
        android:padding="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:tint="@color/dark_red" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameRVManageSingleD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Patients"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/phoneRVManageSingleD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="Phone number"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/shape_approved_rect"
            android:id="@+id/statusRVManageSingleD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FAFAFA"
            android:text="NA"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@color/dark_red"
        android:layout_marginStart="120dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>